<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>
    </style>

    <style name="textStyle_1">
        <item name="android:textSize">@dimen/text_size_style_1</item>
        <item name="android:textColor">@color/textColor_style_1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="textStyle_2">
        <item name="android:textSize">@dimen/text_size_style_2</item>
        <item name="android:textColor">@color/textColor_style_2</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="textStyle_3">
        <item name="android:textSize">@dimen/text_size_style_3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor_style_2</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
